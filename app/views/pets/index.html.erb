<h1>Listing Pets</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th class="prova">Owner</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.user.name %></td>
        <td><a href="/" class="js-show-details" data-pet="<%=pet.id%>"><img src="/details.png" alt="details icon" height="25"><a></td>

        <% if current_user.id == pet.user_id %>
          <td><%= link_to("Edit", edit_user_pet_path(current_user, pet)) %></td>
          <td><%= link_to('Delete', user_pet_path(current_user, pet), method: :delete, data: {confirm: 'Are you sure?'}) %></td>
        <%end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<h2><%= link_to 'Add new pet', new_user_pet_path(current_user) %></h2>


<div class="modal fade js-pet-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pet-name">Name</span>
        </h3>
      </div>

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Species</dt>
          <dd class="js-pet-species">Species</dd>
          <dt>Age</dt>
          <dd class="js-pet-age">100</dd>
          <dt>Owner</dt>
          <dd class="js-pet-owner">Owner</dd>
          <dt>Image</dt>
          <img src="" class="js-pet-image" height="250">
        </dl>
      </div>

    </div>
  </div>
</div>
