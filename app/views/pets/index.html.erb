
<div class="row">
  <div class="col-xs-12 col-md-6">    
    <h1>Listing Pets</h1>
  </div>
  <div class="col-xs-12 col-md-6">
    <h2><%= link_to '+ Add new pet', new_user_pet_path(current_user) %></h2>    
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Details</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.user.name %></td>
        <td><a href="/" class="js-show-details" data-pet="<%=pet.id%>">Details<a></td>
        <% if current_user.id == pet.user_id %>
          <td><%= link_to("Edit", edit_user_pet_path(current_user, pet)) %></td>
          <td><%= link_to('Delete', user_pet_path(current_user, pet), method: :delete, data: {confirm: 'Are you sure?'}) %></td>
        <%else%>
        <td></td>
        <td></td>
        <%end %>
        
      </tr>
    <% end %>
  </tbody>
</table>



<div class="modal fade js-pet-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <b><span>Name: </span></b>        
          <span class="js-pet-name">Name</span>
        </h3>
      </div>

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Species: </dt>
          <dd class="js-pet-species">Species</dd>
          <dt>Age: </dt>
          <dd class="js-pet-age">100</dd>
          <dt>Owner: </dt>
          <dd class="js-pet-owner">Owner</dd>
          <dt>Image: </dt>
          <img src="" class="js-pet-image" height="250">
        </dl>
      </div>

    </div>
  </div>
</div>
